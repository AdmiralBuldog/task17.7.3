per_cent = {'ТКБ': 5.6, 'СКБ': 5.9, 'ВТБ': 4.28, 'СБЕР': 4.0}

# Ввод суммы депозита с клавиатуры
money = int(input("Введите сумму, которую планируете положить под проценты: "))

# Расчет накопленных средств в каждом банке
deposit = [round(money * percent / 100) for percent in per_cent.values()]

# Вывод списка накопленных средств в каждом банке
print("Накопленные средства за год в каждом из банков:")
for bank, amount in zip(per_cent.keys(), deposit):
    print(f"{bank}: {amount}")

# Поиск максимальной суммы и ее вывод
max_deposit = max(deposit)
print(f"\nМаксимальная сумма, которую вы можете заработать: {max_deposit}")
